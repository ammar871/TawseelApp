<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/their_layout_video_there"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
android:layout_alignParentLeft="true"
        android:paddingVertical="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"


        android:visibility="visible">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_marginBottom="-12dp"

            android:id="@+id/video_View1item_there"
            android:layout_width="@dimen/_35ssp"
            android:layout_height="@dimen/_35ssp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/_1sdp"
            android:layout_marginRight="@dimen/_4sdp"
            />


        <ImageView
            android:id="@+id/video_body_there"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_200sdp"

            android:scaleType="fitXY"
            android:layout_below="@id/video_View1item_there"
            android:layout_toRightOf="@id/video_View1item_there"

            android:elevation="2dp"


            android:textSize="13sp" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/layout_me_video"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:paddingVertical="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="10dp"
        android:visibility="gone">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageView1_video_me"
            android:layout_width="@dimen/_33ssp"
            android:layout_marginBottom="-12dp"
            android:layout_height="@dimen/_33ssp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/_1sdp"
            android:layout_marginRight="@dimen/_4sdp"
            android:src="@drawable/imagerat"


            />

        <ImageView

            android:id="@+id/img_bodyme_video"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_200sdp"

            android:scaleType="fitXY"
            android:layout_below="@id/imageView1_video_me"

            android:layout_toLeftOf="@id/imageView1_video_me"

            android:elevation="2dp"
            android:fontFamily="@font/medium"
            android:gravity="left"

            />

    </RelativeLayout>
</RelativeLayout>