<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/backroundtrans"
    android:layout_height="match_parent">
<androidx.cardview.widget.CardView
    app:cardCornerRadius="@dimen/_10sdp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/_20sdp"
    android:layout_marginEnd="@dimen/_20sdp"
    android:paddingBottom="@dimen/_20sdp"
   app:cardBackgroundColor="@android:color/transparent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintTop_toTopOf="parent">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:paddingBottom="@dimen/_20sdp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="parent"

            app:layout_constraintRight_toRightOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_20sdp"
                android:fontFamily="@font/bold"
                android:text="ارفاق ملف "
                android:textSize="@dimen/_15ssp"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp">

                <TextView
                    android:id="@+id/send_phone"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:elevation="@dimen/_5sdp"
                    android:gravity="right"
                    android:paddingRight="@dimen/_10ssp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:background="@drawable/draw_text_chose_file"
                    android:drawableRight="@drawable/ic_person"
                    android:drawablePadding="@dimen/_8sdp"
                    android:fontFamily="@font/medium"
                    android:paddingTop="@dimen/_8sdp"
                    android:paddingBottom="@dimen/_8sdp"
                    android:text="جهة اتصال "
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_percent=".45" />
                <TextView
                    android:id="@+id/send_location"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:elevation="@dimen/_5sdp"
                    android:gravity="right"
                    android:paddingRight="@dimen/_10ssp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:background="@drawable/draw_text_chose_file"
                    android:drawableRight="@drawable/ic_place"
                    android:drawablePadding="@dimen/_8sdp"
                    android:fontFamily="@font/medium"
                    android:paddingTop="@dimen/_8sdp"
                    android:paddingBottom="@dimen/_8sdp"
                    android:text="الموقع "
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_percent=".45" />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp">

                <TextView
                    android:id="@+id/send_photo"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:elevation="@dimen/_5sdp"
                    android:gravity="right"
                    android:paddingRight="@dimen/_10ssp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:background="@drawable/draw_text_chose_file"
                    android:drawableRight="@drawable/ic_photo"
                    android:drawablePadding="@dimen/_8sdp"
                    android:fontFamily="@font/medium"
                    android:paddingTop="@dimen/_8sdp"
                    android:paddingBottom="@dimen/_8sdp"
                    android:text="صورة"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_percent=".45" />
                <TextView
                    android:id="@+id/send_store"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:elevation="@dimen/_5sdp"
                    android:gravity="right"
                    android:paddingRight="@dimen/_10ssp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:background="@drawable/draw_text_chose_file"
                    android:drawableRight="@drawable/ic_store"
                    android:drawablePadding="@dimen/_8sdp"
                    android:fontFamily="@font/medium"
                    android:paddingTop="@dimen/_8sdp"
                    android:paddingBottom="@dimen/_8sdp"
                    android:text="الموقع "
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_percent=".45" />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp">

                <TextView
                    android:id="@+id/send_vedio"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:elevation="@dimen/_5sdp"
                    android:gravity="right"
                    android:paddingRight="@dimen/_10ssp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/draw_text_chose_file"
                    android:drawableRight="@drawable/ic_video_library"
                    android:drawablePadding="@dimen/_8sdp"
                    android:fontFamily="@font/medium"
                    android:paddingTop="@dimen/_8sdp"
                    android:paddingBottom="@dimen/_8sdp"
                    android:text="فيديو "
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_percent=".45" />
                <TextView
                    android:id="@+id/send_room"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:elevation="@dimen/_5sdp"
                    android:gravity="right"
                    android:paddingRight="@dimen/_10ssp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:background="@drawable/draw_text_chose_file"
                    android:drawableRight="@drawable/ic_room_service"
                    android:drawablePadding="@dimen/_8sdp"
                    android:fontFamily="@font/medium"
                    android:paddingTop="@dimen/_8sdp"
                    android:paddingBottom="@dimen/_8sdp"
                    android:text="الاسر المنتجة "
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_percent=".45" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>