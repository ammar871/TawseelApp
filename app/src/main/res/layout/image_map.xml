<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/custom_marker_view"
    android:layout_width="wrap_content"

    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_42sdp"
        android:layout_height="@dimen/_42sdp"

        app:cardCornerRadius="@dimen/_50ssp"
        android:id="@+id/card_color"
        android:layout_margin="@dimen/_3ssp"
        >
        <FrameLayout

            android:background="@drawable/cirvle_layout"
            android:layout_width="@dimen/_39ssp"
            android:layout_gravity="center"
            android:layout_height="@dimen/_39ssp">
            <de.hdodenhof.circleimageview.CircleImageView

                android:id="@+id/user_dp"
                android:layout_width="@dimen/_36ssp"
                android:layout_height="@dimen/_36ssp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:contentDescription="@null"
                />
        </FrameLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>