<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F3F3F3"
        tools:context=".ui.fragments.NotifecationFragment">

        <RelativeLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_80ssp"
            android:background="@drawable/drawb_backround_bar">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/imag_back_bar" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="@dimen/_20sdp"
                android:fontFamily="@font/bold"
                android:text="الاشعارات"

                android:textColor="@color/white"
                android:textSize="@dimen/_15ssp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_15ssp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:fontFamily="@font/bold"
                android:id="@+id/toggles"
                android:textColor="@color/white"

                android:textSize="@dimen/_15ssp"
                app:srcCompat="@drawable/ic_menu" />

        </RelativeLayout>
        <FrameLayout
            android:id="@+id/layout_progress"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                />

        </FrameLayout>
        <LinearLayout
android:layout_below="@id/app_bar"
            android:id="@+id/home_contant"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/_12sdp"
                android:fontFamily="@font/medium"
                android:text="اليـوم"
                android:layout_marginTop="@dimen/_10ssp"
                android:textColor="@color/black"
                android:textSize="@dimen/_15ssp"/>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10ssp"
                android:layout_marginBottom="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_6sdp"
                android:layout_marginLeft="@dimen/_6sdp"
                android:visibility="visible"
                android:id="@+id/rv_list_notify_today">

            </androidx.recyclerview.widget.RecyclerView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/_12sdp"
                android:fontFamily="@font/medium"
                android:text="3/3/2002"
                android:layout_marginTop="@dimen/_10ssp"
                android:textColor="@color/black"
                android:textSize="@dimen/_15ssp"/>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10ssp"
                android:layout_marginBottom="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_6sdp"
                android:layout_marginLeft="@dimen/_6sdp"
                android:visibility="visible"
                android:id="@+id/rv_list_notify">

            </androidx.recyclerview.widget.RecyclerView>

        </LinearLayout>

    </RelativeLayout>
</layout>