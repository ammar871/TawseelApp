<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        tools:context=".ui.fragments.HomeFragment">
        <RelativeLayout
            android:layout_gravity="center"
            android:visibility="gone"
            android:layout_centerInParent="true"
            android:id="@+id/layout_location_internet"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"

            android:background="@drawable/drawble_edit2"
            android:padding="@dimen/_8ssp"

            >

            <LinearLayout
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:paddingTop="@dimen/_10ssp">

                <ImageView
                    android:layout_width="@dimen/_50ssp"
                    android:layout_height="@dimen/_50ssp"
                    android:layout_gravity="center"

                    android:contentDescription="@string/app_name"
                    app:srcCompat="@drawable/ic_logopages" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:fontFamily="@font/regular"
                    android:gravity="center"
                    android:paddingBottom="@dimen/_8sdp"
                    android:text="@string/check_internet"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15ssp" />

                <LinearLayout
                    android:id="@+id/btn_dissmes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:orientation="horizontal">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_4sdp"
                        android:background="@drawable/drawble_button_dialog"
                        android:fontFamily="@font/medium"
                        android:paddingLeft="@dimen/_15sdp"
                        android:paddingTop="@dimen/_6sdp"
                        android:paddingRight="@dimen/_15sdp"
                        android:paddingBottom="@dimen/_6sdp"
                        android:text="@string/agree"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_15ssp"
                        android:textStyle="bold" />

                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
<LinearLayout
    android:id="@+id/layout_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80ssp"
        android:background="@drawable/drawb_backround_bar">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/imag_back_bar" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/_20sdp"
            android:fontFamily="@font/bold"
            android:text="@string/billes"

            android:textColor="@color/white"
            android:textSize="@dimen/_15ssp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_5ssp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:fontFamily="@font/bold"
            android:text="الطلبات"
            android:textColor="@color/white"
            android:padding="@dimen/_10sdp"
            android:id="@+id/toggles"
            android:textSize="@dimen/_15ssp"
            app:srcCompat="@drawable/ic_menu" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/_10ssp"
        android:layout_marginEnd="@dimen/_10ssp"
        android:orientation="vertical">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/draw_tab"

            >

            <RelativeLayout

                android:id="@+id/layout_not_found_order"
                android:layout_width="@dimen/_90sdp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_3sdp"
                android:background="@drawable/draw_selected_tab"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_18sdp"
                    android:layout_marginTop="@dimen/_4sdp"


                    android:layout_marginEnd="@dimen/_18sdp"
                    android:layout_marginBottom="@dimen/_4sdp"


                    android:fontFamily="@font/black"
                    android:text="@string/paided"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12ssp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_found_order"
                android:layout_width="@dimen/_90sdp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_marginBottom="@dimen/_3sdp"
                android:background="@drawable/draw_text_tab"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_18sdp"
                    android:layout_marginTop="@dimen/_4sdp"


                    android:layout_marginEnd="@dimen/_18sdp"
                    android:layout_marginBottom="@dimen/_4sdp"


                    android:fontFamily="@font/black"
                    android:text="@string/finshed_order"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12ssp" />
            </RelativeLayout>

        </RelativeLayout>
        <FrameLayout
            android:id="@+id/layout_progress"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                />

        </FrameLayout>
        <androidx.core.widget.NestedScrollView
            android:visibility="gone"
            android:id="@+id/nestscroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_orders_current"
                    android:layout_width="match_parent"
                    android:nestedScrollingEnabled="false"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20ssp"
                    android:layout_marginBottom="@dimen/_10sdp">
                </androidx.recyclerview.widget.RecyclerView>

                <ProgressBar
                    android:visibility="gone"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="@dimen/_25sdp"
                    android:id="@+id/pro_bar_pag"
                    android:layout_width="35dp"
                    android:layout_height="35dp"

                    android:indeterminate="true"
                    android:layout_gravity="center_horizontal"
                    android:indeterminateTint="@color/text_color"
                    android:outlineAmbientShadowColor="@color/text_color"
                    android:outlineSpotShadowColor="@color/text_color" />
            </LinearLayout>

        </androidx.core.widget.NestedScrollView>
        <androidx.core.widget.NestedScrollView
            android:visibility="gone"
            android:id="@+id/nestscrollfinshed"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_orders_finshed"
                    android:layout_width="match_parent"
                    android:nestedScrollingEnabled="false"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20ssp"
                    android:layout_marginBottom="@dimen/_10sdp">
                </androidx.recyclerview.widget.RecyclerView>

                <ProgressBar
                    android:visibility="gone"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="@dimen/_25sdp"
                    android:id="@+id/pro_bar_pag_finshid"
                    android:layout_width="35dp"
                    android:layout_height="35dp"

                    android:indeterminate="true"
                    android:layout_gravity="center_horizontal"
                    android:indeterminateTint="@color/text_color"
                    android:outlineAmbientShadowColor="@color/text_color"
                    android:outlineSpotShadowColor="@color/text_color" />
            </LinearLayout>

        </androidx.core.widget.NestedScrollView>


    </LinearLayout>

</LinearLayout>



    </FrameLayout>
</layout>