<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
android:id="@+id/card"
 android:layout_margin="@dimen/_6sdp"
  android:background="@color/white"
    app:cardElevation="@dimen/_4sdp"

    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/_10sdp"
    >


    <RelativeLayout

               android:padding="@dimen/_5sdp"
        android:background="@drawable/drawble_item_message"
        android:id="@+id/view_background_noty"
     android:layout_margin="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/delete_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/_10sdp"
            app:srcCompat="@drawable/ic_delete_sweep" />
    </RelativeLayout>




    <FrameLayout

        android:id="@+id/view_for_background_noty"
android:visibility="visible"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
android:layout_margin="@dimen/_3sdp"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/tv_name_lable_noty"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:fontFamily="@font/medium"

                android:textColor="@color/black"
                android:textSize="@dimen/_11sdp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_messgee_noty"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
             android:paddingBottom="@dimen/_2sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:fontFamily="@font/medium"
                android:gravity="right"
                android:maxLines="1"

                android:textColor="@color/login_color2"
                android:textSize="@dimen/_11sdp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_name_lable_noty" />


            <TextView
                android:id="@+id/tv_date_messgee_noty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/medium"
                android:maxLines="1"

                android:text="  09:35 صباحاً"
                android:textColor="@color/light_text"
                android:textSize="@dimen/_9sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout
      >

</androidx.cardview.widget.CardView>