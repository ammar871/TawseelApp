<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"

    android:layout_height="wrap_content">


    <RelativeLayout
        android:id="@+id/message_audio_layout_me"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="wrap_content"
        android:layout_marginRight="7dp"
        android:layout_marginTop="5dp"
android:layout_alignParentRight="true"
        android:visibility="gone">

        <androidx.cardview.widget.CardView

            android:id="@+id/cardView_me"
            android:layout_width="@dimen/_250sdp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"



            app:cardBackgroundColor="@color/login_color2"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical">

                <de.hdodenhof.circleimageview.CircleImageView

                    android:id="@+id/imageViewaudio_me"
                    android:layout_width="@dimen/_38ssp"
                    android:layout_height="@dimen/_38ssp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/_1sdp"
                    android:layout_marginRight="@dimen/_4sdp"
                    android:layout_marginBottom="@dimen/_4sdp"
                    android:padding="@dimen/_3sdp"
                    android:src="@drawable/imagerat"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <FrameLayout
                    android:id="@+id/play_audio_lay_me"
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="3dp">

                    <ImageView
                        android:id="@+id/thumbnail_video_icon_me"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:paddingBottom="5dp"
                        android:src="@drawable/ic_baseline_play_me_24" />



                </FrameLayout>

                <LinearLayout
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_toRightOf="@id/play_audio_lay_me"

                    android:orientation="vertical"


                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <SeekBar

                        android:id="@+id/seekBarMe"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:minHeight="2dip"
                        android:progressTint="#FFFFFF"
                        android:rotationY="180"
                        android:thumbTint="#FFFFFF" />

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:orientation="horizontal"
                        android:padding="2dp">

                        <TextView
                            android:id="@+id/txt_audio_time_me"
                            android:layout_width="92dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left|bottom"
                            android:layout_weight="1"
                            android:gravity="bottom|center|left"
                            android:text="02:10"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="#FFFFFF"
                            android:textSize="10.00sp" />


                        <!--                        <ImageView-->
                        <!--                            android:id="@+id/msg_status_icon_chat"-->
                        <!--                            android:layout_width="16dp"-->
                        <!--                            android:layout_height="16dp"-->
                        <!--                            android:layout_gravity="center_vertical"-->
                        <!--                            android:layout_marginRight="8dp"-->
                        <!--                            android:src="@drawable/ic_tick"-->
                        <!--                           />-->

                    </LinearLayout>
                </LinearLayout>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/date_body_me_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cardView_me"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/_5sdp"
            android:elevation="2dp"
            android:gravity="right"

            android:paddingTop="@dimen/_2sdp"


            android:textSize="11sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/message_layout_their"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="wrap_content"

        android:layout_margin="@dimen/_5sdp"
        android:layout_alignParentLeft="true"
        android:paddingLeft="7dp"
        android:paddingRight="10dp"
        android:layout_marginLeft="5dp"
        android:visibility="visible">


        <androidx.cardview.widget.CardView
            android:id="@+id/card_there"
            android:layout_width="@dimen/_250sdp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/username_text"


            app:cardCornerRadius="8dp"
            app:cardElevation="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imageViewaudio_there"
                    android:layout_width="@dimen/_38ssp"
                    android:layout_height="@dimen/_38ssp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="@dimen/_1sdp"
                    android:padding="@dimen/_3sdp"
                    android:layout_marginRight="@dimen/_4sdp"
                    android:layout_marginBottom="@dimen/_4sdp"
                    android:src="@drawable/imagerat" />

                <FrameLayout
                    android:id="@+id/layout_play"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginBottom="@dimen/_3ssp"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/imageViewaudio_there">

                    <ImageView
                        android:id="@+id/thumbnail_video_icon_there"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:src="@drawable/ic_baseline_play_thier" />


                </FrameLayout>
<LinearLayout
    android:id="@+id/seekbar_t_l"
   android:layout_centerVertical="true"
    android:layout_width="@dimen/_190sdp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_toRightOf="@id/layout_play">
    <SeekBar
        android:layout_marginTop="@dimen/_8sdp"
        android:id="@+id/seekBar__there"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"

        android:minHeight="2dip"
        android:progressTint="@color/login_color2"
        android:thumbTint="@color/login_color2" />


    <TextView
        android:id="@+id/date_text_there"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/seekbar_t_l"
android:layout_gravity="left"
        android:layout_marginRight="8dp"

        android:text="03:50 am"

        android:textColor="@color/color_bar"
        android:textSize="10sp" />
</LinearLayout>


            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/date_body_there_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/card_there"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/_5sdp"
            android:elevation="2dp"
            android:gravity="right"
            android:paddingTop="@dimen/_2sdp"
            android:text="3333333333333"


            android:textSize="11sp" />
    </RelativeLayout>
</RelativeLayout>