<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_margin="@dimen/_5sdp"


    >

    <RelativeLayout
        android:id="@+id/layout_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >


        <FrameLayout
            android:id="@+id/view_for_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="-15dp"
            android:layout_toLeftOf="@id/imageViewraitng"

            android:background="@drawable/drawble_edit2"

            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"

                android:layout_height="match_parent">


                <TextView
                    android:id="@+id/tv_nameerating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:fontFamily="@font/medium"
                    android:paddingTop="@dimen/_4sdp"

                    android:text="عمر علي"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11sdp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_commentr"
                    android:layout_width="@dimen/_150sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:fontFamily="@font/medium"
                    android:maxLines="1"
                    android:gravity="right"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:text="متى سنبدا العمل مباشرة ؟"
                    android:textColor="@color/text_coloe"
                    android:textSize="@dimen/_11sdp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_nameerating" />


                <androidx.appcompat.widget.AppCompatRatingBar
                    android:id="@+id/tv_ratingm"
                    style="@style/Widget.AppCompat.RatingBar.Small"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"

                    android:layout_marginTop="@dimen/_5sdp"
                    android:maxLines="1"
                    android:rating="5"
                    android:text="25/06/2019"
                    android:textColor="@color/login_color2"
                    android:theme="@style/RatingBar"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </FrameLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_gravity="right"
            android:padding="@dimen/_5sdp"
            android:id="@+id/imageViewraitng"
            android:layout_width="@dimen/_50ssp"
            android:layout_height="@dimen/_50ssp"
            android:layout_marginRight="@dimen/_2sdp"
            android:paddingRight="@dimen/_5sdp"
            android:src="@drawable/imagtest"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            tools:ignore="MissingConstraints" />



    </RelativeLayout>







</androidx.cardview.widget.CardView>