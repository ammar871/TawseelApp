<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".ui.fragments.ChatFragment">

        <RelativeLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_80ssp"
            android:background="@drawable/drawb_backround_bar">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/imag_back_bar" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="@dimen/_20sdp"
                android:fontFamily="@font/bold"
                android:text="الرسائل"

                android:textColor="@color/white"
                android:textSize="@dimen/_15ssp" />

            <ImageView
                android:layout_width="10dp"
                android:layout_height="7dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_15ssp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:fontFamily="@font/bold"

                android:textColor="@color/white"
android:id="@+id/toggles"
                android:textSize="@dimen/_15ssp"
                app:srcCompat="@drawable/ic_menu" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_50sdp"
            android:layout_marginEnd="@dimen/_10sdp">


            <FrameLayout
                android:id="@+id/view_for_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="-15dp"
                android:layout_toLeftOf="@id/imageView1"

                android:background="@drawable/drawble_edit2"

                >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"

                    android:layout_height="match_parent">


                    <TextView
                        android:id="@+id/tv_name_lable"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_15sdp"
                        android:fontFamily="@font/medium"
                        android:paddingTop="@dimen/_4sdp"

                        android:text="عمر علي"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_11sdp"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_messgee"
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:fontFamily="@font/medium"
                        android:maxLines="1"
                        android:layout_marginRight="@dimen/_15sdp"
                        android:paddingBottom="@dimen/_5sdp"
                        android:text="متى سنبدا العمل مباشرة ؟"
                        android:textColor="@color/text_coloe"
                        android:textSize="@dimen/_11sdp"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_name_lable" />


                    <androidx.appcompat.widget.AppCompatRatingBar
                        android:id="@+id/tv_date_messgee"
                        style="@style/Widget.AppCompat.RatingBar.Small"
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"

                        android:layout_marginTop="@dimen/_5sdp"
                        android:maxLines="1"
                        android:rating="5"
                        android:text="25/06/2019"
                        android:textColor="@color/login_color2"
                        android:theme="@style/RatingBar"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>


            </FrameLayout>

            <com.makeramen.roundedimageview.RoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/imageView1"
                android:layout_width="@dimen/_60ssp"
                android:layout_height="@dimen/_60ssp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="right"

                android:scaleType="fitCenter"
                android:src="@drawable/imagtest"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:riv_border_color="#333333"

                app:riv_corner_radius="30dip"
                app:riv_mutate_background="true"
                app:riv_oval="true"

                />

        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_chat"
            android:background="@drawable/backroundtrans"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/layout_details">

        </androidx.recyclerview.widget.RecyclerView>


        <RelativeLayout
            android:id="@+id/layout_gchat_chatbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_25sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView

                android:id="@+id/img_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/ic_send" />

            <ImageView
                android:id="@+id/img_record"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_toRightOf="@id/img_send"
                app:srcCompat="@drawable/ic_record" />

            <androidx.cardview.widget.CardView
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/img_record"
                app:cardElevation="@dimen/_8sdp"
              app:cardCornerRadius="@dimen/_10sdp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/img_file"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingLeft="@dimen/_8sdp"
                        app:srcCompat="@drawable/ic_attach_file"/>
                    <EditText

                        android:id="@+id/edit_gchat_message"
                        android:layout_width="@dimen/_190sdp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:background="@null"
                        android:backgroundTint="@null"
                        android:fontFamily="@font/medium"
                        android:gravity="right|center_vertical"
                        android:hint="اكتب هنا"
                        android:layout_toRightOf="@id/img_file"
                        android:paddingRight="@dimen/_10sdp"
                        android:inputType="textMultiLine"
                        android:maxLines="6"
                        android:paddingTop="@dimen/_8sdp"
                        android:paddingBottom="@dimen/_8sdp"
                        android:text=""
                        tools:ignore="Autofill" />
                </RelativeLayout>

            </androidx.cardview.widget.CardView>


        </RelativeLayout>


