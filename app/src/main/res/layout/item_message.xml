<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="@dimen/_5sdp"
android:background="@color/color_backround"

 >

<RelativeLayout
    android:background="@drawable/drawble_item_message"
    android:id="@+id/view_background"
    android:layout_margin="@dimen/_5ssp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/delete_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/_10sdp"
        app:srcCompat="@drawable/ic_delete_sweep" />
</RelativeLayout>





    <androidx.cardview.widget.CardView
        android:id="@+id/view_for_background"
android:padding="@dimen/_10sdp"
        app:cardBackgroundColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:cardCornerRadius="@dimen/_10sdp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.makeramen.roundedimageview.RoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/imageView1"
                android:layout_width="@dimen/_50ssp"
                android:layout_height="@dimen/_50ssp"
                android:layout_gravity="right"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginRight="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_8sdp"
                android:scaleType="fitCenter"
                android:src="@drawable/imagtest"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:riv_border_color="#333333"

                app:riv_corner_radius="30dip"
                app:riv_mutate_background="true"
                app:riv_oval="true"

                />

            <TextView
                android:id="@+id/tv_name_lable"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:fontFamily="@font/medium"
                android:text="عمر علي"
                android:textColor="@color/black"
                android:textSize="@dimen/_11sdp"
                app:layout_constraintRight_toLeftOf="@id/imageView1"
                app:layout_constraintTop_toTopOf="@id/imageView1" />

            <TextView
                android:id="@+id/tv_messgee"

                android:layout_width="@dimen/_150sdp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:fontFamily="@font/medium"
                android:maxLines="1"
                android:text="متى سنبدا العمل مباشرة ؟"
                android:textColor="@color/text_coloe"
                android:textSize="@dimen/_11sdp"
                app:layout_constraintRight_toLeftOf="@id/imageView1"
                app:layout_constraintTop_toBottomOf="@id/tv_name_lable" />


            <TextView
                android:id="@+id/tv_date_messgee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/medium"
                android:maxLines="1"

                android:text="25/06/2019"
                android:textColor="@color/login_color2"
                android:textSize="@dimen/_9sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>